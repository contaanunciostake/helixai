# ==========================================
# VENDEAI - CONFIGURAÇÕES
# ==========================================

# Flask
SECRET_KEY=vendeai-super-secret-key-change-this
FLASK_ENV=development
FLASK_DEBUG=True

# Database
DATABASE_URL=sqlite:///vendeai.db
# Para produção PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/vendeai

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo

# Groq (alternativa rápida e barata)
GROQ_API_KEY=your-groq-api-key-here

# ElevenLabs Audio
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here
ELEVENLABS_VOICE_ID=your-voice-id-here
ELEVENLABS_AGENT_ID=your-agent-id-here

# WhatsApp
WHATSAPP_SERVER_PORT=3000

# Limites do Sistema (Plano Gratuito)
FREE_LIMITE_LEADS=100
FREE_LIMITE_DISPAROS_MES=500
FREE_LIMITE_USUARIOS=3

# Planos
PLANO_BASICO_PRECO=97.00
PLANO_PROFISSIONAL_PRECO=197.00
PLANO_ENTERPRISE_PRECO=497.00

# SMTP (para envio de emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-password
SMTP_FROM=VendeAI <noreply@vendeai.com>

# Webhook URLs (para receber eventos do ElevenLabs)
WEBHOOK_BASE_URL=https://seu-dominio.com
WEBHOOK_SECRET=webhook-secret-key-change-this

# Redis (para cache e filas - opcional)
REDIS_URL=redis://localhost:6379/0

# Timezone
TIMEZONE=America/Sao_Paulo

# Logs
LOG_LEVEL=INFO
LOG_FILE=logs/vendeai.log
